<body>
  <div id="result">생존</div>
  <button onclick="pullTrigger()">Pull</button>

  <script>
    function pullTrigger() {
      // 1~6 중 랜덤 (1이면 사망, 나머지는 생존)
      let chamber = Math.floor(Math.random() * 6) + 1;
      let resultBox = document.getElementById("result");

      if (chamber === 1) {
        resultBox.textContent = "사망하셨습니다";
        resultBox.style.color = "red";
      } else {
        resultBox.textContent = "생존하셨습니다";
        resultBox.style.color = "green";
      }
    }
  </script>
</body>
</html>
